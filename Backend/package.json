{
    "name": "backend",
    "version": "1.0.0",
    "description": "",
    "homepage": "https://github.com/SoyManoolo/M12#readme",
    "bugs": {
        "url": "https://github.com/SoyManoolo/M12/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SoyManoolo/M12.git"
    },
    "license": "ISC",
    "author": "Erik Manuel Salda√±a Diaz",
    "type": "commonjs",
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "setupFiles": [
            "dotenv/config"
        ],
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        },
        "testMatch": [
            "<rootDir>/src/__tests__/**/*.ts"
        ]
    },
    "scripts": {
        "build": "tsc && node -e \"require('shelljs').mkdir('-p', 'dist/lang'); require('shelljs').cp('-R', 'src/lang/*', 'dist/lang/')\"",
        "start:cleanup": "pm2 start dist/scripts/cleanup.js --name cleanup-job --cron '0 3 * * *'",
        "stop:cleanup": "pm2 stop cleanup-job",
        "delete:cleanup": "pm2 delete cleanup-job",
        "sync-translations": "ts-node src/lang/syncTranslations.ts",
        "start": "cross-env NODE_ENV=production node dist/server.js",
        "dev": "cross-env nodemon dist/server.js",
        "test": "cross-env NODE_ENV=test jest --verbose --coverage --runInBand --forceExit --detectOpenHandles --silent",
        "test:watch": "npm run test -- --watch",
        "test:reset-db": "cross-env NODE_ENV=test ts-node src/config/resetDB.ts"
    },
    "dependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/socket.io-client": "^3.0.0",
        "bcrypt": "^6.0.0",
        "bcryptjs": "^2.4.3",
        "celebrate": "^15.0.3",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^5.0.1",
        "helmet": "^8.1.0",
        "http-status-codes": "^2.3.0",
        "i18n": "^0.15.1",
        "jsonwebtoken": "^9.0.2",
        "multer": "^1.4.5-lts.2",
        "node-cron": "^3.0.3",
        "pg": "^8.13.3",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0",
        "sequelize": "^6.37.5",
        "socket.io": "^4.8.1",
        "socket.io-client": "^4.8.1",
        "translate": "^3.0.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/i18n": "^0.13.12",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/multer": "^1.4.12",
        "@types/node": "^22.10.6",
        "@types/node-cron": "^3.0.11",
        "@types/pg": "^8.11.11",
        "@types/sequelize": "^4.28.20",
        "@types/supertest": "^6.0.2",
        "cross-env": "^7.0.3",
        "jest": "^29.7.0",
        "nodemon": "^3.1.9",
        "shelljs": "^0.9.2",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.6",
        "typescript": "^5.7.3",
        "vite-tsconfig-paths": "^5.1.4"
    }
}
