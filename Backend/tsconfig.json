{
    "include": [
        "src/**/*.ts"
, "src/lang/syncTranslations.ts"    ],
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "target": "es2022",
        "module": "NodeNext",
        "outDir": "./dist",
        "esModuleInterop": true,
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "moduleResolution": "nodenext",
        "allowSyntheticDefaultImports": true
    }
}